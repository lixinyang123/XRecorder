<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Recoder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Recoder.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Recoder"
		ExtendClientAreaToDecorationsHint="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>


	<StackPanel HorizontalAlignment="Center">
		<TextBlock Text="{Binding Greeting}" />
		<Button Content="Download FFmpeg" Command="{Binding DownloadFFmpegCommand}" Margin="20" />
		<ProgressBar Value="{Binding DownloadFFmpegProgress}" />

		<Button Content="Start Capture" Command="{Binding StartCaptureCommand}" Margin="20" />

		<Button Content="Stop Capture" Command="{Binding StopCaptureCommand}" Margin="20" />
	</StackPanel>
	
</Window>
