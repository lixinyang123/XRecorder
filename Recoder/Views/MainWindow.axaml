<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Recoder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="70"
        x:Class="Recoder.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Recoder"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="0"
		Height="70"
		Width="550"
		CanResize="False"
		Position="0,0"
		Topmost="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>


	<StackPanel Orientation="Horizontal">
		<Button Content="Download FFmpeg" Command="{Binding DownloadFFmpegCommand}" Margin="20" />
		<ProgressBar Value="{Binding DownloadFFmpegProgress}" />

		<Button Content="{Binding RecordText}" Command="{Binding SwitchCaptureCommand}" Margin="10" />
		<Button Content="Exit" Command="{Binding SwitchCaptureCommand}" />
	</StackPanel>
	
</Window>
