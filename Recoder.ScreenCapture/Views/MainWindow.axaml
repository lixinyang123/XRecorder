<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Recoder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="50"
        x:Class="Recoder.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Recoder"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="0"
		Height="50"
		Width="350"
		CanResize="False"
		Topmost="True"
		ShowInTaskbar ="False"
		Opacity="0.7">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="140" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="55" />
		</Grid.ColumnDefinitions>

		<Button Content="Open Browser" Command="{Binding OpenBrowserCommand}" Grid.Column="0" Margin="10" />

		<Button Content="{Binding RecordText}" Command="{Binding SwitchCaptureCommand}" Grid.Column="1" />

		<Button Content="Exit" Command="{Binding ExitCommand}" Grid.Column="2" />
	</Grid>
	
</Window>
